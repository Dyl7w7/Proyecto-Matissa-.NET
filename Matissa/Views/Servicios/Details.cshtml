@model Matissa.Models.Servicio

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="col-12 container detalle text-center">
    <link rel="stylesheet" href="~/css/servicios/servicios.css">
    <div class="col-12  container-fluid ">
        <div class="row titulo-detalle">
            <div class="col-12">
                <h1>Detalle de Servicios</h1>
            </div>
        </div>
    </div>
  
    <div class="row justify-content-center cuadro">
        <div class="col-md-6">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NombreServicio)</th>
                        <td>@Html.DisplayFor(model => model.NombreServicio)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Descripción)</th>
                        <td>@Html.DisplayFor(model => model.Descripción)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Duración)</th>
                        <td>@Html.DisplayFor(model => model.Duración)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                        <td>@Html.DisplayFor(model => model.Precio)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Estado)</th>
                        <td>@Html.DisplayFor(model => model.Estado)</td>
                    </tr>


                </tbody>
            </table>
        </div>
    </div>
        
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a asp-action="Edit" asp-route-id="@Model?.IdServicio" class="btn btn-warning">Editar</a> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
